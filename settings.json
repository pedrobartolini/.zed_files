{
  // THEME
  "theme": "Gruvbox Dark",
  "icon_theme": "Material Icon Theme",

  // UI
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 14,
  "ui_font_weight": 400,
  "collaboration_panel": { "dock": "right" },
  "outline_panel": { "dock": "right" },
  "project_panel": { "hide_root": true, "entry_spacing": "standard" },
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "tabs": { "file_icons": true },

  // BUFFER
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 12,
  "buffer_font_weight": 400,
  "buffer_font_features": { "calt": true },
  "current_line_highlight": "none",
  "git": { "inline_blame": { "enabled": false }, "git_gutter": "hide" },
  "indent_guides": { "enabled": false },
  "gutter": {
    "breakpoints": false,
    "line_numbers": false,
    "folds": false,
    "runnables": false
  },
  "inline_code_actions": false,

  // MINIMAP
  "minimap": {
    "show": "always",
    "current_line_highlight": "none",
    "thumb": "hover",
    "thumb_border": "none"
  },

  // ACTIONS
  "base_keymap": "VSCode",
  "tab_size": 2,
  "double_click_in_multibuffer": "open",
  "extend_comment_on_newline": false,

  // TERMINAL
  "terminal": { "cursor_shape": "bar" },

  // LSP and AGENT
  "show_edit_predictions": false,
  "completions": { "lsp_insert_mode": "replace_suffix" },
  "language_servers": ["!eslint", "!typescript-language-server", "..."],

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        // get more cargo-less diagnostics from rust-analyzer,
        // which might include false-positives (those can be turned off by their names)
        "diagnostics": { "experimental": { "enable": true } },
        // To disable the checking entirely
        // (ignores all cargo and check settings below)
        "checkOnSave": true,
        // To check the `lib` target only.
        "cargo": { "allTargets": false },
        // Use `-p` instead of `--workspace` for cargo check
        "check": { "workspace": false }
      }
    }
  }
}
