[
  {
    "context": "Editor && showing_completions",
    "bindings": { "tab": "editor::ConfirmCompletion" }
  },

  {
    "context": "Editor && !(showing_completions || edit_prediction || edit_prediction_conflict)",
    "bindings": { "tab": ["workspace::SendKeystrokes", "\t"] }
  },

  {
    "context": "",
    "bindings": { "ctrl-tab": "pane::ActivateNextItem" }
  },

  {
    "context": "Workspace && !Editor && !Terminal",
    "bindings": {
      "ctrl-left": "project_panel::CollapseAllEntries"
    }
  },

  {
    "context": "Terminal",
    "bindings": {
      // Word deletion
      "ctrl-backspace": ["terminal::SendKeystroke", "ctrl-backspace"],
      "ctrl-delete": ["terminal::SendText", "\u001b[3;5~"],

      // Word navigation - Ctrl+Left/Right
      "ctrl-left": ["terminal::SendText", "\u001b[1;5D"],
      "ctrl-right": ["terminal::SendText", "\u001b[1;5C"],

      // Line navigation - Home/End
      "home": ["terminal::SendText", "\u001b[H"],
      "end": ["terminal::SendText", "\u001b[F"]
    }
  }
]
